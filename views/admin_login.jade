extends layout

block content
  .container
    .row
      div.col-md-4.col-md-offset-4
        .panel.login-panel.panel-default
          .panel-heading
            h2.panel-title
             span &nbsp&nbspAdmin Login
          .panel-body
            form(role='form', action='/admin/login', method='post')
              .form-group
                label.control-label Username:
                .input-icon
                input.form-control.email(type='text',placeholder='Username',name='username')
              .form-group
                label.control-label Password:
                .input-icon
                input.form-control(type='password',placeholder='Password',name='password')
              .form-group
                button.btn.btn-primary.btn-block(type='submit') Login
                
          .panel-footer
            .checkbox.pull-left
            label
              input(type='checkbox', value='1', name='remember') 
              |Keep me logged In
             
          
